{
  "manifest_version": 2,

  "name": "Chroak",
  "description": "6.857 Final Project",
  "version": "1.0",

  "chrome_url_overrides": {
    "newtab": "app.html"
  },

  "icons": { "16": "ghost.png",
           "48": "ghost.png",
          "128": "ghost.png" },

   "background": {
        "persistent": true,
        // unlimited notification fun if you uncomment line 22
        "scripts": ["background.js"]
    },

  "browser_action": {
    "default_icon": "ghost.png",
    "default_popup": "popup.html",
    "default_title": "6.857 Final Project: Chroak",
    "default_icon": {
            "19": "ghost.png",
            "38": "ghost.png"
          }
    },

  "oauth2": {
    "client_id": "499742986420-7sscg2hqonqie2ma7u352vvr5k50j2v2.apps.googleusercontent.com",
    "scopes": [
      "https://daniman.me"
    ]
  },

  "permissions": [
    "activeTab",
    "alarms",
    "background",
    "browsingData",
    "clipboardWrite",
    "contextMenus",
    "cookies",
    "declarativeContent",
    "fontSettings",
    "gcm",
    "identity",
    "idle",
    "notifications",
    "power",
    "printerProvider",
    "sessions",
    "storage",
    "system.cpu",
    "system.display",
    "system.memory",
    "system.storage",
    "tts",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking"
  ]
}
